@{ 
    Page.Title = "Login";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body style="width: 30%; margin: auto;">
    <form class="form-signin">
        <div class="text-center mb-4">
            <h1 class="h3 mb-3 font-weight-normal">Welcome!</h1> 
        </div>

        <div class="form-label-group" style="margin-bottom: 20px">
            <input type="email" id="inputEmail" class="form-control" placeholder="Имя пользователя" required="" autofocus="">
        </div>

        <div class="form-label-group" style="margin-bottom: 20px">
            <input type="password" id="inputPassword" class="form-control" placeholder="Пароль" required="">
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit" style="margin-bottom: 20px">Войти</button>

        <label for="reg">Нет аккаунта?</label>
        <button class="btn btn-lg btn-primary btn-block" id="reg" type="submit">Зарегистрироваться</button>
    </form>


</body>
</html>
