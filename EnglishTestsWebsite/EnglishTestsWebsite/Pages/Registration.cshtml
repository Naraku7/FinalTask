@using Ioc;
@{ 
    Page.Title = "Registration";
    var userLogic = DependencyResolver.UserLogic;

    string username = null;
    string password = null;

    if (IsPost)
    {
        username = Request["username"];
        password = Request["password"];

        userLogic.AddUser(new Entities.User(username, password));

        Response.Redirect("~/Pages/login.cshtml");
    }

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body style="width: 30%; margin: auto;">
    <form class="form-signin" method="post">
        <div class="text-center mb-4">
            <h1 class="h3 mb-3 font-weight-normal">Регистрация</h1>
        </div>

        <div class="form-label-group" style="margin-bottom: 20px">
            <input type="text" id="inputEmail" class="form-control" name="username" placeholder="Имя пользователя" required autofocus maxlength="25">
        </div>

        <div class="form-label-group" style="margin-bottom: 20px">
            <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Пароль" required maxlength="50">
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit" style="margin-bottom: 20px" onclick="log()">Зарегистрироваться</button>
    </form>

    
</body>
</html>
